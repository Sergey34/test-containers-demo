{
  "job_id": "1",
  "job_name": "demo",
  "job_description": "demo job",
  "schedule": "0 * * * * ?",
  "global_config": {
    "target_index": "window"
  },
  "steps": [
    {
      "id": "errors",
      "chunkSize": 5,
      "reader": {
        "type": "ES_SCROLL",
        "index": "error-2018",
        "config": {
          "time": 1000,
          "query": "{\"match_all\": {}}",
          "fields": [
            "id",
            "code",
            "related_sales_order"
          ],
          "order": {
            "field": "@timestamp",
            "type": "ASC"
          },
          "script_fields": [
            {
              "field_name": "field_1",
              "script": {
                "lang": "painless",
                "source": "doc['price'].value * 2 * params.factor",
                "params": "{\"factor\": 2.0}"
              }
            }
          ]
        }
      },
      "processor": {
        "type": "JOIN",
        "config": {
          "joins": [
            {
              "type": "LEFT_JOIN",
              "index": "order-*",
              "id_field": "id",
              "target_field": "order"
            },
            {
              "type": "SEARCH_JOIN",
              "index": "order-*",
              "query": "{\"query\": {\"term\": {\"error_id.keyword\": {\"value\": \"{{id}}\"}}}}",
              "target_field": "order"
            }
          ]
        }
      },
      "writer": {
        "type": "UPDATE",
        "config": {
          "doc_as_upsert": true,
          "retry_on_conflict": 1,
          "target_field": null,
          "field_with_doc_id": "id"
        }
      }
    }
  ]
}